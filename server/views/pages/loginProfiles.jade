extends ../layouts/layout

block content
  .row
    .col-md-6.col-md-offset-3
      form(role='form')
        .form-group
          label(for='username') Todo Text
          input#username.form-control(type='text', name='todotext', placeholder='Enter username')
        .form-group
          label(for='password') Todo Location
          input#locationget(type='text', name='password', placeholder='Enter Location')


          .form-group
            label(for='password') Todo Time
            input#password.form-control(name='time')
        button#sumbit.btn.btn-default(type='button') Submit


      br
      if (messages.error)
        p
          span(style="color:red")= messages.error

      div#post_data(style='background-color:#f1f1f1;padding:10px;')

